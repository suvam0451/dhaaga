{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"jsx": "react-jsx",
		"moduleResolution": "NodeNext",
		"moduleDetection": "force",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		// Strictness
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"rootDir": "src",
		"outDir": "dist",
		// perf
		"removeComments": true,
		"preserveConstEnums": true,
		// debugging
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"paths": {
			"#/*": ["./src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["dist", "tests"]
}
