{
  "name": "@dhaaga/core",
  "description": "Core business logic for the Dhaaga apps",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "dependencies": {
    "@dhaaga/bridge": "*"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "scripts": {
    "up": "bun build --outdir ./dist --outfile ./dist/index.js --target node ./src/index.ts && tsc -p ./tsconfig.json"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/*",
      "types": "./dist/*"
    }
  },
  "private": true
}