{
  "name": "@dhaaga/core",
  "description": "Core business logic for the Dhaaga apps",
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "dependencies": {
    "@dhaaga/bridge": "*",
    "zod": "^3.24.2"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "bun:up": "rm -rf ./dist/** && bun build --outdir ./dist --outfile ./dist/index.js --target node ./src/index.ts && tsc -p ./tsconfig.json",
    "up": "tsc -p ./tsconfig.json"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/*",
      "types": "./dist/*"
    }
  },
  "private": true
}