{
  "extends": ["@dhaaga/tsconfig/base.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-native",
    "checkJs": false,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "lib": [
      "ESNext"
    ]
  },
  "include": [
    "*.ts",
    "*.tsx",
    "*.js"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./**/*"
  ]
}
